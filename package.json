  "dependencies": {
    "@solana/web3.js": "1.95.8",
    "bs58": "^6.0.0",
    "commander": "^12.1.0",
    "viem": "^2.18.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@jest/globals": "^29.7.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "glob": "^10.3.10"
  },
  "scripts": {
